@charset "utf-8";
/*************************
  color:
  green   #46c340 
  blue    #4691f6
  gray    #f6f6f6
  
  border  #ddd  
  
  @author aven.tong
  @creation  20140507

*************************/

/*  rerest  */

body{
	font-family: "微软雅黑", "宋体", "黑体";
	font-size: 12px;
	line-height: 1.8;
	color:#434343;
	/* position:relative; */
}
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section{display:block}
body,h1,h2,h3,p,ul,ol,dl,dd,menu{margin:0;}
input,textarea,select{font-size:100%;font-family:inherit;}
textarea{resize:none; padding:3px 5px;}
ul,ol{padding-left:0;list-style:none;}
a{text-decoration:none; color:#454545;}
a:hover{color:#16a;}
img{border:0;}
u{font-style:normal;}
button{border:none; cursor:pointer;}
input,textarea{border: 1px solid #ccc;}
table{
	width:100%;	
	border-collapse: collapse;
    border-spacing: 0;
}
td,th{border:1px solid #ccc;}
h3{font-size:18px; font-weight:800;}
b{font-weight:400;}
.fr{float:right;}
.fl{float:left;}
.f18{font-size:18px;}
.ptb70{padding:65px 0;}
.pt70{padding:65px 0 0;}
.border{border:1px solid #ccc;}
.border_t{border-top:1px solid #ddd;}
.border_r{border-right:1px solid #ddd;}
.border_b{border-bottom:1px solid #ddd;}
.border_tb{border-top:1px solid #ddd; border-bottom:1px solid #ddd;}
.border_non{border:none;}
.dib{display:inline-block;vertical-align:top;}
.dib{*display:inline;}
.tac{text-align:center;}
.tal{text-align:left;}
.tar{text-align:right;}
.vam{vertical-align:middle;}
.fcr{color:#c00;}
.fcg{color:#46c340;}
.fccc{color:#ccc;}
.bgc{background:#f6f6f6; min-width:980px;}
.d_none{display:none;}
.ell{	
	text-overflow:ellipsis; 
	white-space:nowrap; 
	overflow:hidden;
}
.fix{*zoom:1;}
.fix:after{	
	content:".";	
	clear:both;	
	height:0;
	visibility:hidden;
	display:block;
}
.bor{
	display:inline-block;		
	border-width:6px 5px;
	border-style:solid;
	border-color:#ddd transparent transparent;
	position:absolute;
	width:0;
	height:0;
}
.btnbox{text-align:center;}
.btn{
	display:inline-block;
	border-radius:18px;
	width:136px;
	height:32px;	
	cursor:pointer;		
	border:2px solid #4691f6;
	color:#4691f6;
	text-align:center;
	line-height:32px;
	font-size:14px;
}
.gtlt {
    cursor: default;
    font-family: simsun;
    letter-spacing: -0.1em;
}
.ico,
.totop,
.logo_l,
.logo a{
	display:inline-block;
	background:url(../images/icons.png) no-repeat;
}

.headbox,
.summarybox,
.sumbox, 
.featurebox, 
.appbox, 
.freashbox, 
.footer{
	width:980px;
	margin:0 auto;
	overflow:hidden;
	/* border:1px solid #ccc; */
}



/*****  header  *****/
.headline{
	height:3px;
	background:-moz-linear-gradient(left, #46c340,#4691f6);
	background:-webkit-linear-gradient(-60deg, #1a4380,#40c390);
}
.logo{padding:20px 0 17px;}
.logo{font-size:0;}
.logo a{
	width:183px;
	height:30px;
}
.m_menu a{
	font-size:14px;	
	display:inline-block;
	margin-right:20px;
	padding: 22px 0 18px;
}
.m_menu a:hover,
.m_menu .on{
	border-bottom:2px solid #46c340;
	font-weight:800;
	outline:none;
}
.userbox{padding-top: 22px;}
.userbox a,		
.userbox span{vertical-align:middle;}
.f_user span,
.userbox span{padding:0 5px;}


/****  banner   ****/
.bannerbox{
	position:relative;
	text-align:center;
	margin-top:-1px;
	min-width:980px;
	height:430px;
	overflow:hidden;	
	background:#f0f0f0;
}
.banner{}
.banner li{
	min-width:980px;
	height:430px;
}
.ban1{
	background:-moz-linear-gradient(-60deg, #1a4380,#40c390);
	background:-webkit-linear-gradient(-60deg, #1a4380,#40c390);
}
.ban1 span{
	float:left;
	width:100%;
	height:100%;
	background:url(../images/banner1.png) no-repeat 50% 50%;
}
.ban2{background:#4790f6 url(../images/banner2.jpg) no-repeat 50% 50%;}
.ban3{background:#ebf2f8 url(../images/banner3.jpg) no-repeat 50% 50%;}

.tabs{	
	display:inline-block;
	position:absolute;
	bottom:10px;
	left:48.5% \9;
	opacity:0.8;
}
.tabs span{
	cursor:pointer;
	text-indent:-99em;
	overflow:hidden;
	width:6px;
	height:6px;
	border:2px solid #fff;
	border-radius:50%;
	display:inline-block;
	margin:0 5px;
}
.tabs .on{background:#fff;}

.summary{	
	height:9.5em;
	overflow:hidden;
	position:relative;
}
.summary li{
	padding:20px 0;	
}
.sum_infor{
	width:75%;
	padding-right:30px;
}
.sum_btn{margin-top:20px;}
.sum_btn:hover{
	border:2px solid #4691f6;
	color:#fff;
	background:#4691f6;
	text-decoration:none;
}
.sum_tabs{
	padding:20px 0;
	width:110%;
	font-size:14px;
}
.sum_tabs li{
	border:1px solid #ddd;
	border-radius:4px;
	display:inline-block;
	margin-right:2%;
	text-align:center;
	width:28.5%;
	padding:5px 0;
	cursor:pointer;
	position:relative;
}
.sum_tabs .bor{
	left:49.5%;
	top:-21px;
	display:none;
}
.sum_tabs li:hover,
.sum_tabs .on{
	background:#4691f6;
	border:1px solid #4691f6;
	color:#fff;
}
.sum_tabs .on .bor{display:inline-block;}

/*  featurebox  */
.sec_h2{
	font-size:22px;
	font-weight:400;
	line-height: 1;
}
.m_list,
.freash{
	width:1010px;
}
.m_list>li,
.freash>li{
	float:left;
	width:30%;
	margin:6% 3% 0 0;
}
.m_list p{color:#999;}
.m_list .ico{
	width:80px;
	height:90px;
}
.ico_word{background-position:-283px 0;}
.ico_api{background-position:-363px 0;}
.ico_list{background-position:-443px 0;}
.ico_edit{background-position:-283px -90px;}
.ico_sevice{background-position:-363px -90px;}
.ico_secure{background-position:-443px -90px;}

.appulbox .ico{height:80px;}
.ico_hr{background-position:-283px -180px;}
.ico_logist{background-position:-443px -180px;}
.ico_finance{background-position:-443px -180px;}
.ico_money{background-position:-283px -260px;}
.ico_license{background-position:-363px -180px;}
.ico_secure{background-position:-443px -90px;}

.minfor_box{
	width:17em;
	margin-left:1em;
}
.freash h3,
.m_list h3,
.m_list a{
	font-size:18px;
	color:#333;
	font-weight:400;
}
.m_list a:hover{color:#16a;}
.sec_h2 a{
	font-size:12px;
	color:#16a;
	padding-left:15px;
}


/*  app  */
.appulbox{
	height:290px;
	overflow:hidden;
}
.app_tabs{
	position:static;
	text-align:center;
	padding:60px 0 20px;
	width:100%;
}
.app_tabs span{border-color:#888;}
.app_tabs .on{background:#888;}

/*  freash  */
.infor_list{padding-top:15px;}
.infor_list > li{
	padding-top:10px;
	color:#999;
}
.footer,
.footer a,
.infor_list a{color:#999;}
.infor_list a:hover{color:#16a;}
.f_user{padding-top:15px;}
.f_user b{padding:0 3px;}
.logo_l{
	width:219px;
	height:24px;
	background-position:0 -35px;
	margin-bottom:3px;
}


/*   totop   */
.totop{
	border:2px solid #bbb;
	border-radius:3px;
	width:38px;
	height:38px;
	background-position:-770px 10px;
	background-color:#fff;
	position:fixed;
	bottom:20px;	
	right:10px;		
	cursor:pointer;
	display:none;
}
.totop:hover{
	border-color:#555;
	background-color:#333;
}


