/****  banner   ****/
.bannerbox{
	position:relative;
	text-align:center;
	margin-top:-1px;
	min-width:980px;
	height:430px;
	overflow:hidden;
	
}
.banner li{
	width:100%;
	min-width:980px;
	height:430px;
	position:absolute;
	top:0;
	left:0;
}
.appad,
.ban1,
.ban3{
	background:-moz-linear-gradient(-60deg, #1a4380,#40c390);
	background:-webkit-linear-gradient(-60deg, #1a4380,#40c390);
}
.ban2,
.ban4{
	background:-moz-linear-gradient(-60deg, #1a2980,#26d0ce);
	background:-webkit-linear-gradient(-60deg, #1a2980,#26d0ce);
}
.anibox{
	width:980px;
	height:430px;
	margin:0 auto;
	overflow:hidden;
	position:relative;
}
.anibox img,
.anibox span{
	position:absolute;
	opacity:0;
}

