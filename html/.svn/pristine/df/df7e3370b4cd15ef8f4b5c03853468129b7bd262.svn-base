@-webkit-keyframes toRound{
	0% {       
        -webkit-transform: rotate(0);  
    }
    100% {      
        -webkit-transform: rotate(65deg);  
    }
}
@keyframes toRound {
    0% {       
        transform: rotate(0);  
    }
    100% {      
        transform: rotate(65deg);  
    }
}
.aniCircle{
	-webkit-animation-name: toRound;
    -webkit-animation-duration: 16s;
    -webkit-animation-iteration-count: infinite;
    -webkit-animation-direction: alternate;
    -webkit-animation-timing-function: ease-in-out;
	
	animation-name: toRound;
    animation-duration: 16s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-timing-function: ease-in-out;  
}


/*  ban3  */
.aniCircle2,
.circle_bg{
	width:446px;
	height:446px;	
	top:-8px;
	left:0;
	overflow:hidden;
}
.circle_bg b{
	transition:all .4s ease .3s;	
	width:142px;
	height:142px;
	background:#fff;
	position:absolute;
	left:50%;
	top:50%;	
	opacity:0;
	margin:-71px 0 0 -71px;
	border-radius:50%;
}
.circle_bg .cirbg1{-webkit-transform:scale(1.6);transform:scale(1.6);opacity:0.2;}
.circle_bg .cirbg2{-webkit-transform:scale(2.1);transform:scale(2.1);opacity:0.2;}
.circle_bg .cirbg3{-webkit-transform:scale(2.6);transform:scale(2.6);opacity:0.2;}
.circle_bg .cirbg4{-webkit-transform:scale(3.1);transform:scale(3.1);opacity:0.2;}
